{
  "manifest_version": 3,
  "name": "Application Tracker",
  "version": "1.0",
  "description": "Detects job applications and logs them",
  "permissions": ["storage", "cookies", "tabs"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
